#!/bin/sh

# Strategic Testing Pre-commit Hook - Fast and Reliable Quality Gates
cd "$(dirname "$0")/.."

echo "ğŸ›¡ï¸  EVIDENS Strategic Testing - Quality Gates Active"
echo "=================================================="

# Function to run commands with proper error handling
run_check() {
  local name="$1"
  local command="$2"
  
  echo "ğŸ”„ Running $name..."
  
  if eval "$command"; then
    echo "âœ… $name passed"
    return 0
  else
    echo "âŒ $name failed"
    return 1
  fi
}

# Main validation sequence
echo ""
echo "ğŸ” Phase 1: Code Quality Checks"
echo "--------------------------------"

# Run lint-staged for file-specific checks
if ! run_check "Staged File Linting" "npx lint-staged"; then
  echo "ğŸš« COMMIT BLOCKED - Staged file linting failed"
  exit 1
fi

# Run ESLint validation
if ! run_check "ESLint Validation" "npm run lint"; then
  echo "ğŸš« COMMIT BLOCKED - ESLint validation failed"
  exit 1
fi

# Run TypeScript compilation check
if ! run_check "TypeScript Check" "npx tsc --noEmit"; then
  echo "ğŸš« COMMIT BLOCKED - TypeScript compilation failed"
  exit 1
fi

echo ""
echo "ğŸ§ª Phase 2: Strategic Test Execution"
echo "------------------------------------"

# Run our strategic tests with timeout
echo "ğŸ”„ Running strategic tests..."
echo "âš¡ Testing critical security boundaries and business logic..."

# Use timeout to prevent hanging (3 minute limit for strategic tests)
if timeout 180s npm run test:critical > /tmp/test-output.log 2>&1; then
  # Parse test results
  if grep -q "âœ“" /tmp/test-output.log; then
    echo "âœ… Strategic tests passed"
    
    # Show test summary
    echo ""
    echo "ğŸ“Š Test Summary:"
    grep -E "(âœ“|Test Files|Tests)" /tmp/test-output.log | tail -3
  else
    echo "âŒ Strategic tests failed - No passing tests detected"
    echo ""
    echo "ğŸ“„ Test Output:"
    cat /tmp/test-output.log
    echo ""
    echo "ğŸš« COMMIT BLOCKED - Fix failing tests before committing"
    exit 1
  fi
else
  echo "âŒ Strategic tests failed or timed out"
  echo ""
  echo "ğŸ“„ Test Output:"
  cat /tmp/test-output.log
  echo ""
  echo "ğŸš« COMMIT BLOCKED - Tests failed or took too long (3min limit)"
  echo "ğŸ’¡ Run 'npm run test:critical' manually to debug issues"
  exit 1
fi

# Cleanup
rm -f /tmp/test-output.log

echo ""
echo "âœ… âœ… âœ… ALL QUALITY GATES PASSED! âœ… âœ… âœ…"
echo "ğŸ›¡ï¸  Your commit is safe - all checks passed!"
echo "ğŸš€ Proceeding with commit..."