if [ -f "./node_modules/.bin/tsc" ]; then
    echo "Using local TypeScript..."
    ./node_modules/.bin/tsc --noEmit
else
    echo "TypeScript not found locally"
    exit 1
fi

if [ $? -ne 0 ]; then
    echo "âŒ TypeScript compilation failed. Fix errors before committing."
    exit 1
fi

echo "ğŸ§ª Running complete test suite..."
echo "ğŸ“‹ TDD Protocol: ALL tests must pass before committing."

# Run tests using local installation
if [ -f "./node_modules/.bin/vitest" ]; then
    ./node_modules/.bin/vitest run
else
    echo "Vitest not found locally"
    exit 1
fi

if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Fix failing tests before committing."
    echo "ğŸ“‹ TDD Protocol violation: Cannot commit with failing tests."
    exit 1
fi

echo "âœ… All TDD Protocol checks passed!"
echo "ğŸš€ Commit approved - TDD Protocol compliance verified."