# Run lint-staged using local installation
if [ -f "./node_modules/.bin/lint-staged" ]; then
    ./node_modules/.bin/lint-staged
else
    echo "âš ï¸ lint-staged not found, skipping..."
fi

echo "ğŸ” Checking TypeScript compilation..."
